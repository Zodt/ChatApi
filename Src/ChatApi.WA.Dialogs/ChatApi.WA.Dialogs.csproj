<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <LangVersion>9</LangVersion>
        <Nullable>enable</Nullable>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Title>ChatApi.WA.Dialogs</Title>
        <Authors>Roman Vorontsov</Authors>
        <Description>ChatApi is an unofficial cross-platform libraries for interacting with the chat-api.com</Description>
        <PackageLicenseUrl></PackageLicenseUrl>
        <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
        <RepositoryUrl>https://github.com/Zodt/ChatApi</RepositoryUrl>
        <RepositoryType>GitHub</RepositoryType>
        <PackageTags>ChatApi, WhatsAppApi, WhatsApp-Api, WhatsApp</PackageTags>
        <PackageIconUrl></PackageIconUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageIcon>ChatApi.png</PackageIcon>
        <NeutralLanguage>en</NeutralLanguage>
    </PropertyGroup>

    <ItemGroup>
      <Folder Include="Helpers\Abstract\Interfaces" />
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Update="Properties\Resourse.resx">
        <Generator>ResXFileCodeGenerator</Generator>
        <LastGenOutput>Resourse.Designer.cs</LastGenOutput>
      </EmbeddedResource>
      <EmbeddedResource Remove="Documentation\en-EN\**" />
      <EmbeddedResource Remove="Documentation\ru-RU\**" />
    </ItemGroup>

    <ItemGroup>
      <Compile Update="Properties\Resourse.Designer.cs">
        <DesignTime>True</DesignTime>
        <AutoGen>True</AutoGen>
        <DependentUpon>Resourse.resx</DependentUpon>
      </Compile>
      <Compile Remove="Documentation\en-EN\**" />
      <Compile Remove="Documentation\ru-RU\**" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\ChatApi.Core\ChatApi.Core.csproj" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="Documentation\en-EN\**" />
      <None Remove="Documentation\ru-RU\**" />
      <None Include="..\ChatApi.png">
        <Pack>True</Pack>
        <PackagePath></PackagePath>
      </None>
    </ItemGroup>

</Project>
